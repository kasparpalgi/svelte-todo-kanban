# Public environment variables
PUBLIC_APP_ENV="development" # "production", "testing" (use to not do some API calls to test with local test data - use .env.test for playwright testing) or "development" (local)
PUBLIC_API_ENV="development" # "production" or "developmen" to use PUBLIC_API_ENDPOINT_DEV
PUBLIC_APP_URL="https://todo.e-stonia.co.uk" # Your live app URL
PUBLIC_API_ENDPOINT="https://example.com/v1/graphql"
PUBLIC_API_ENDPOINT_DEV="http://localhost:3001/v1/graphql"

# Auth.js Configuration
AUTH_SECRET="your-random-auth-secret"
AUTH_TRUST_HOST=true
SECRET_ENCRYPTION_KEY="for_encrypting_users_tokens"

# Google OAuth
AUTH_GOOGLE_ID="your-google-client-id"
AUTH_GOOGLE_SECRET="your-google-client-secret"

# Email Provider (example with SMTP)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your@email.com"
EMAIL_SERVER_PASSWORD="your-smtp-password"
EMAIL_FROM="ToDo App <your@email.com>"

# Hasura Configuration
API_ENDPOINT="https://example.com/v1/graphql"
API_ENDPOINT_DEV="http://localhost:3001/v1/graphql"
HASURA_ADMIN_SECRET="your-hasura-admin-secret"

# Backblaze B2 Configuration
B2_KEY_ID="key"
B2_APPLICATION_KEY="app_key"
B2_BUCKET_NAME="bucket_name"

# AI providers
OPENAI_API_KEY="key"

# Upload Configuration
MAX_FILE_SIZE="5242880" # or whatever you need
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,application/pdf,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/msword,text/csv" # or whatever you want to allow (I plan to handle also other than image in near future)

#Github
GITHUB_CLIENT_ID="client_id"
GITHUB_CLIENT_SECRET="xxx"