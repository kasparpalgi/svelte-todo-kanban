{
    "manifest_version": 3,
    "name": "Klarity Title Fix",
    "version": "0.1",
    "description": "Shows chat/group name in WhatsApp Web window title + more in future versions.",
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": []
}