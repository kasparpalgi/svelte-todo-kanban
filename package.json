{
	"name": "svelte-todo-kanban",
	"private": true,
	"version": "0.8.1",
	"type": "module",
	"scripts": {
		"generate": "graphql-codegen --require dotenv/config && node fix-imports.cjs",
		"dev": "npm run generate && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest --project=client",
		"test:unit:server": "vitest --project=server",
		"test:unit:all": "vitest",
		"test:unit:ui": "vitest --ui --project=client",
		"test": "npm run test:unit:all -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:h": "playwright test --headed --workers=1",
		"i-npm": "npm install -g npm@$(node -p \"require('./package.json').engines.npm\")",
		"cu": "rm -rf node_modules .svelte-kit && npm cache clean --force && npm ci",
		"cw": "rmdir /s /q node_modules && rmdir /s /q .svelte-kit && npm cache clean --force && npm ci"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@graphql-codegen/cli": "^6.0.0",
		"@graphql-codegen/client-preset": "^5.0.1",
		"@graphql-codegen/typed-document-node": "^6.0.0",
		"@graphql-codegen/typescript": "^5.0.0",
		"@graphql-codegen/typescript-operations": "^5.0.0",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/node": "^22",
		"@types/nodemailer": "^7.0.2",
		"@vite-pwa/sveltekit": "^1.0.0",
		"@vitest/browser": "^3.2.3",
		"@vitest/ui": "^3.2.4",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"cross-env": "^10.0.0",
		"dotenv": "^17.2.2",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"jsdom": "^27.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"shadcn-svelte": "^1.0.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte2tsx": "^0.7.43",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@auth/hasura-adapter": "^1.10.0",
		"@auth/sveltekit": "^1.10.0",
		"@neoconfetti/svelte": "^2.2.2",
		"@neodrag/svelte": "^2.3.3",
		"@sveltekit-i18n/parser-default": "^1.1.1",
		"@tiptap/core": "^3.6.3",
		"@tiptap/extension-task-item": "^3.6.3",
		"@tiptap/extension-task-list": "^3.6.3",
		"@tiptap/starter-kit": "^3.6.3",
		"@vercel/analytics": "^1.5.0",
		"@vercel/speed-insights": "^1.2.0",
		"dotenv-cli": "^10.0.0",
		"graphql": "^16.11.0",
		"graphql-request": "^7.2.0",
		"jsonwebtoken": "^9.0.2",
		"lucide-svelte": "^0.544.0",
		"mode-watcher": "^1.1.0",
		"nodemailer": "^6.10.1",
		"svelte-tiptap": "^3.0.0",
		"sveltekit-i18n": "^2.4.2",
		"zod": "^4.1.11"
	}
}
